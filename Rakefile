require 'rubygems'
require 'bundler'
begin
  Bundler.setup(:default, :development)
rescue Bundler::BundlerError => e
  $stderr.puts e.message
  $stderr.puts "Run `bundle install` to install missing gems"
  exit e.status_code
end
require 'riak'
require 'rake'

require 'rake/testtask'
Rake::TestTask.new(:test) do |test|
  test.libs << 'lib' << 'test'
  test.pattern = 'test/**/test_*.rb'
  test.verbose = true
end

task :default => :test

ROOT = File.expand_path('..',__FILE__)
require File.join(ROOT,'lib','cluster')
require File.join(ROOT,'lib','log_keys')
require File.join(ROOT,'lib','log_data')
require File.join(ROOT,'lib','transfer')
